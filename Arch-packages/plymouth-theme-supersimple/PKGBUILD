pkgname=plymouth-theme-supersimple
pkgver=0.3
pkgrel=1
pkgdesc="A supersimple theme stripped from everything except for encryption dialoge"
arch=('i686' 'x86_64')
license=('GPL')

source=('bullet.png' 'capslock.png' 'entry.png' 'lock.png' 'supersimple.plymouth')

md5sums=('ae4e88daaddec7ae4a2a997187866202'
         '7c49b83bab57fa680699cb93835ba583'
         'a20c9157084cf08e10f5f25e8fa1c1d8'
         '66ee769b98e6985bdcd20c4ca719931c'
         '3752f875eeb7a583ade480ba6d479307')

package() {
	
    new_theme_dir="$pkgdir/usr/share/plymouth/themes/supersimple"

    mkdir -p $new_theme_dir
    install -Dm644 "supersimple.plymouth" "$new_theme_dir/supersimple.plymouth"
    install -Dm644 "bullet.png" "$new_theme_dir/bullet.png"
    install -Dm644 "capslock.png" "$new_theme_dir/capslock.png"
    install -Dm644 "lock.png" "$new_theme_dir/lock.png"
    install -Dm644 "entry.png" "$new_theme_dir/entry.png"

}

