#/bin/sh

# Symlink .config-folders
mkdir -p ~/.config
cd ~/.config
for x in ~/.dotfiles/.config/*; do
  ln -s $x 
done

# Symlink .local
mkdir -p ~/.local
cd ~/.local
for x in ~/.dotfiles/.local/*; do
  ln -s $x 
done

# Setup default wallpaper and lockscreen
cd ~
ln -s .dotfiles/Wallpapers/.bg.jpg
ln -s .dotfiles/Wallpapers/lock2.png .lock.png

# Instructions for setting up git
echo 'git config credential.helper store'
echo 'git config --global user.email "<email>"'
echo 'git config --global user.name  "<name>"'
